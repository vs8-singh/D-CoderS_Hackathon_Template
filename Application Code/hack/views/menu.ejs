<%- include("partials/header") %>
<nav class = "navbar navbar-default navbar-inverse" style="margin-top: 0px;">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class = "navbar-brand" href="/">MARENA</a>
        </div>
        <div class = "collapse navbar-collapse">
            <ul class = "nav navbar-nav navbar-right">
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Sign Up</a></li>
            </ul>
        </div>
    </div>
</nav>
    <div class = 'container'>
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="/menu/<%= name %>/menu">All Categories</a></li>
            <li role="presentation"><a href="/menu/<%= name %>/vegmenu">Veg</a></li>
            <li role="presentation"><a href="/menu/<%= name %>/nonvegmenu">Non Veg</a></li>
            <li role="presentation"><a href="/menu/<%= name %>/drinksgmenu">Drinks</a></li>
            <li role="presentation"><a href="/menu/<%= name %>/dessertmenu">Dessert</a></li>
          </ul>
        <h1>Welcome <%= name %></h1>
        <h3>All Categories</h3>
        <div class = 'row text-center' style="display: flex; flex-wrap: wrap;">
        <% for(var i = 0; i<food.length; i++){ %>
            <div class = "col-md-3 col-sm-6" id = '<%=  %>'>
                <div class = 'thumbnail'>
                    <img src="<%= food[i]['image'] %>">
                </div>
                <form action="/menu/:id" method="POST">
                    <div class = 'form-group' name= 'food' value = "<%= food[i]['khana'] %>">
                        <h4><%= food[i]['khana'] %></h4>
                    </div>
                    <div class = 'form-group' name= 'price' value ="<%= food[i]['price'] %>">
                        <h5>Price: <%= food[i]['price'] %> rupees</h5>
                    </div>
                    <div class="form-group" name = 'quantity'>Quantity: <input type="number" name="quantity"  min = '0' max = '10' value = "0"></div>
                    <div class="form-group">
                        <button class="btn btn-sm btn-success">Add to cart</button>
                    </div>
                </form>
            </div>
        <% } %>
    </div>
</div>
<%- include("partials/footer") %>