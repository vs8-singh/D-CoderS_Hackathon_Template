<%- include("partials/header") %>
<nav class = "navbar navbar-default navbar-inverse" style="margin-top: 0px;">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class = "navbar-brand" href="/">MARENA</a>
        </div>
        <div class = "collapse navbar-collapse">
            <ul class = "nav navbar-nav navbar-right">
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Sign Up</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class = 'container'>
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="/menu/<%= name %>/menu">All Categories</a></li>
        <li role="presentation"><a href="/menu/<%= name %>/vegmenu">Veg</a></li>
        <li role="presentation"><a href="/menu/<%= name %>/nonvegmenu">Non Veg</a></li>
        <li role="presentation"><a href="/menu/<%= name %>/drinksgmenu">Drinks</a></li>
        <li role="presentation" class="active"><a href="/menu/<%= name %>/dessertmenu">Dessert</a></li>
      </ul>
      <h1>Welcome <%= name %></h1>
      <h3>Dessert Menu</h3>
      <div class = 'row text-center' style="display: flex; flex-wrap: wrap;">
        <% for(var i = 0; i<food.length; i++){ %>
            <% if(food[i]['type'] === 'dessert'){ %>
                <div class = "col-md-3 col-sm-6" >
                    <div class = 'thumbnail'>
                        <img src="<%= food[i]['image'] %>">
                    </div>
                    <div class = 'caption'>
                        <h4><%= food[i]['khana'] %></h4>
                    </div>
                    <div class = 'caption'>
                        <h5>Price: <%= food[i]['price'] %> rupees</h5>
                    </div>
                </div>
            <% } %>
        <% } %>
    </div>
</div>
    <ol>
        <% for(var i = 0; i<food.length; i++){ %>
            <% if(food[i]['type'] === 'dessert'){ %>
                <li><%= food[i]['khana'] %> -- <%= food[i]['price'] %>rupees</li>
           <% } %>
        <% } %>
    </ol>
<%- include("partials/footer") %>