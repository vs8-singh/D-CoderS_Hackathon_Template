<%- include("partials/header") %>
<nav class = "navbar navbar-default navbar-inverse" style="margin-top: 0px;">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class = "navbar-brand" href="/">MARENA</a>
        </div>
        <div class = "collapse navbar-collapse">
            <ul class = "nav navbar-nav navbar-right">
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Sign Up</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class = 'container'>
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="/menu">All Categories</a></li>
        <li role="presentation"><a href="/menu/vegmenu">Veg</a></li>
        <li role="presentation" class="active"><a href="#">Non Veg</a></li>
        <li role="presentation"><a href="/menu/drinksgmenu">Drinks</a></li>
        <li role="presentation"><a href="/menu/dessertmenu">Dessert</a></li>
      </ul>
      <header class = "jumbotron">
        <h1>Non Veg</h1>
    </header>
      <div class = 'row text-center' style="display: flex; flex-wrap: wrap;">
      <% for(var i = 0; i<food.length; i++){ %>
          <% if(food[i]['type'] === 'non-veg'){ %>
            <div class = "col-md-3 col-sm-6" id = '<%=  %>'>
                <div class = 'thumbnail'>
                    <img src="<%= food[i]['image'] %>">
                </div>
                <form action="/menu/:id" method="POST">
                    <div class = 'form-group' value = "<%= food[i]['khana'] %>">
                        <h4><%= food[i]['khana'] %></h4>
                        <input type = 'hidden' name= 'food' value = "<%= food[i]['khana'] %>">
                    </div>
                    <div class = 'form-group' name= 'price' value ="<%= food[i]['price'] %>">
                        <h5>Price: <%= food[i]['price'] %> rupees</h5>
                        <input type = 'hidden' name= 'price' value ="<%= food[i]['price'] %>">
                    </div>
                    <div class="form-group" name = 'quantity'>Quantity: <input type="number" name="quantity"  min = '0' max = '10' value = "0"></div>
                    <div class="form-group">
                        <button class="btn btn-sm btn-success">Add to cart</button>
                    </div>
                </form>
            </div>
          <% } %>
      <% } %>
  </div>
</div>
<%- include("partials/footer") %>